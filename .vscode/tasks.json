    "version": "2.0.0",
    "tasks": [
        {
            "label": "CleanTmpFolder",
            "identifier": "CleanTmpFolder",
            "type": "shell",
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared"
            },
            "linux": {
                "command": "rm",
                "args": [
                    "-rf", "${workspaceFolder}/tmp"
                ]
            },
            "windows": {
                "command": "Remove-Item",
                "args": [
                    "${workspaceFolder}\\tmp", "-Force", "-Recurse", "-ErrorAction", "SilentlyContinue"
                ]
            }
        },
        {
            "label": "Docker-Compose-Debug",
            "type": "shell",
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": true,
                "panel": "shared"
            },
            //"dependsOn": "CleanTmpFolder",
