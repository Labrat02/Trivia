            //     "command": "docker-compose",
            //     "args": [
            //         "-f", "docker-compose-debug.yml", "up", "-d", "--build", "--remove-orphans",
            //         "&& rm -rfd ${workspaceFolder}/tmp"
            //     ]
            // },
            "windows": {
                "command": "powershell",
                "args": [
                    "${workspaceFolder}\\docker-compose-debug-up.ps1", "${workspaceFolder}\\tmp"
                ]
